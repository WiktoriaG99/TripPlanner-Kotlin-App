<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UtworzElement">

    <EditText
        android:id="@+id/NazwaElementu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wprowadź nazwę przedmiotu..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/CzyLiczbaZaleznaOdDlugosciPodrozy"
        android:text="Czy liczba przedmiotów ma być zależna od długości podróży?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NazwaElementu" />

    <EditText
        android:id="@+id/LiczbaPrzedmiotow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wprowadź liczbę..."
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CzyLiczbaZaleznaOdDlugosciPodrozy"
/>

    <Button
        android:id="@+id/DodajPrzedmiot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj przedmiot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LiczbaPrzedmiotow" />

</androidx.constraintlayout.widget.ConstraintLayout>